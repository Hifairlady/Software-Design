<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_100"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:padding="8dp">

        <ImageButton android:id="@+id/about_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电影院详情"
            android:layout_weight="1"
            android:textColor="@color/white_100"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView android:id="@+id/cinema_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电影院名称"
                    android:textSize="20sp"
                    android:textColor="@color/black_87"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="详细地址："
                        android:textSize="16sp"
                        android:textColor="@color/black_54"/>

                    <TextView android:id="@+id/cinema_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cinema address"
                        android:textSize="16sp"
                        android:textColor="@color/black_87"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="影院网址："
                        android:textSize="16sp"
                        android:textColor="@color/black_54"/>

                    <TextView android:id="@+id/cinema_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="影院网址"
                        android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="交通："
                        android:textSize="16sp"
                        android:textColor="@color/black_54"/>

                    <TextView android:id="@+id/cinema_transport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cinema transport"
                        android:textSize="16sp"
                        android:textColor="@color/black_87"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系电话："
                        android:textSize="16sp"
                        android:textColor="@color/black_54"/>

                    <TextView android:id="@+id/cinema_telephone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12345678"
                        android:textSize="16sp"
                        android:textColor="@color/black_87"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="近期电影"
                android:textSize="12sp"
                android:textColor="@color/black_87"
                android:background="@color/black_26"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"/>

            <TextView android:id="@+id/loading_text"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:text="Loading films..."
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/black_54"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout android:id="@+id/cinema_detail_horizontal_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--add something here-->
                </LinearLayout>

            </HorizontalScrollView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black_12"/>



        </LinearLayout>

    </ScrollView>

</LinearLayout>

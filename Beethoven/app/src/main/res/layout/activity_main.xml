<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_100"
    android:orientation="vertical"
    tools:context="com.sysu.edgar.beethoven.MainActivity">

    <LinearLayout android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        android:background="@color/white_100"
        android:gravity="center_vertical">

        <EditText android:id="@+id/search_text"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="搜索你想要的影片"
            android:textColorHint="@color/black_26"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:layout_weight="1"/>

        <ImageButton android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vec_search_black_24dp"
            android:layout_marginRight="8dp"
            android:background="@color/white_100"/>

    </LinearLayout>

    <FrameLayout android:id="@+id/bottom_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <include layout="@layout/bottom_menu_layout"></include>

</LinearLayout>

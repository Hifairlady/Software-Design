<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:orientation="vertical">

    <LinearLayout android:id="@+id/cinema_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp">

            <TextView android:id="@+id/cinema_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电影院名字"
                android:textColor="@color/black_87"
                android:textSize="24sp"
                android:layout_marginBottom="16dp"/>

            <TextView android:id="@+id/cinema_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="30"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"/>

            <TextView android:id="@+id/cinema_item_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元起"
                android:textColor="@color/black_54"
                android:textSize="16sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp">

            <TextView android:id="@+id/cinema_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更加详细的地址信息"
                android:textSize="16sp"
                android:textColor="@color/black_54"
                android:layout_weight="1"/>

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="距离："-->
                <!--android:textColor="@color/black_26"/>-->

            <TextView android:id="@+id/cinema_item_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离：120m"
                android:textColor="@color/black_26"
                android:layout_marginRight="16dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView android:id="@+id/coming_movies_time_stamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="7月8日 周五"
        android:textSize="12sp"
        android:textColor="@color/black_87"
        android:background="@color/colorAccent"
        android:paddingLeft="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:id="@+id/movie_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_photo_black_100dp"
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"/>

        <TextView android:id="@+id/movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:layout_toRightOf="@id/movie_image"
            android:textSize="24sp"
            android:textColor="@color/black_87"/>

        <LinearLayout android:id="@+id/movie_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/movie_title"
            android:layout_alignLeft="@id/movie_title"
            android:layout_centerVertical="true">

            <TextView android:id="@+id/movie_wtw_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textSize="30sp"
                android:textColor="@color/colorPrimary"/>

            <TextView android:id="@+id/movie_wtw_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人想看"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <Button android:id="@+id/btn_want_watch"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:background="@color/colorAccent"
            android:text="想看"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</LinearLayout>
